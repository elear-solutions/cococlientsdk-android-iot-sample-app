<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activities.CocoNetworksActivity">

  <TextView
    android:id="@+id/tvHeading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Heading"
    android:text="@string/connect_to_coco_nets"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/tvSubHeading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/SubHeading"
    android:text="@string/select_networks_to_connect"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvHeading"
    />

  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeToRefresh"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="30dp"
    app:layout_constraintTop_toBottomOf="@id/tvSubHeading"
    app:layout_constraintBottom_toTopOf="@id/btnConnect">

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvNetworks"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/recycler_item_network" />

  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

  <Button
    android:id="@+id/btnConnect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="20dp"
    android:text="@string/connect"
    app:layout_constraintBottom_toTopOf="@id/sBottom" />

  <Space
    android:id="@+id/sBottom"
    android:layout_width="0dp"
    android:layout_height="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
