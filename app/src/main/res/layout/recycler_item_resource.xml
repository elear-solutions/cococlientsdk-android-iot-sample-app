<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="5dp"
  app:cardCornerRadius="5dp"
  app:cardElevation="5dp"
  app:strokeColor="@color/colorgreylight"
  app:strokeWidth="1dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
      android:id="@+id/tvResourceName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingBottom="5dp"
      android:fontFamily="@font/quicksand_semi_bold"
      android:text="@string/resource_name"
      android:textAlignment="center"
      android:textColor="@color/color_heading"
      android:textSize="18sp"
      app:layout_constraintBottom_toTopOf="@id/dividerLine"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <View
      android:id="@+id/dividerLine"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorgreylight"
      android:orientation="horizontal"
      app:layout_constraintTop_toBottomOf="@id/tvResourceName" />

    <TextView
      android:id="@+id/tvPowerDescription"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:fontFamily="@font/quicksand_semi_bold"
      android:textSize="15sp"
      android:text="@string/power_supply"
      app:layout_constraintBottom_toTopOf="@id/tvTempDescription"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/dividerLine" />

    <TextView
      android:id="@+id/tvTempDescription"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:fontFamily="@font/quicksand_semi_bold"
      android:textSize="15sp"
      android:text="@string/temperature"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvPowerDescription" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/glV60"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/glV70"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.7" />

    <TextView
      android:id="@+id/tvPowerValue"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_marginEnd="10dp"
      android:fontFamily="@font/quicksand_semi_bold"
      android:textColor="@color/color19C676"
      android:textSize="15sp"
      app:layout_constraintBottom_toTopOf="@id/tvTempValue"
      app:layout_constraintEnd_toStartOf="@id/glV60"
      app:layout_constraintTop_toTopOf="@id/dividerLine"
      tools:text="@string/off" />

    <TextView
      android:id="@+id/tvTempValue"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="5dp"
      android:fontFamily="@font/quicksand_semi_bold"
      android:textColor="@color/color19C676"
      android:textSize="15sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/glV60"
      app:layout_constraintTop_toBottomOf="@id/tvPowerValue"
      tools:text="35 C" />

    <com.google.android.material.checkbox.MaterialCheckBox
      android:id="@+id/btOnOff"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="30dp"
      android:backgroundTint="@color/white"
      android:button="@drawable/ic_power"
      android:buttonTint="@color/button_tint_selector"
      android:checked="false"
      android:text="@null"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/glV70"
      app:layout_constraintTop_toTopOf="@id/dividerLine" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
